<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
	<servers>
		<server>
			<id>idugalic-releases</id>
			<username>idugalic</username>
			<password>${env.MAVEN_PASSWORD}</password>
		</server>
		<server>
			<id>idugalic-snapshots</id>
			<username>idugalic</username>
			<password>${env.MAVEN_PASSWORD}</password>
		</server>
		<server>
			<id>docker-hub</id>
			<username>idugalic</username>
			<password>${env.DOCKER_PASSWORD}</password>
			<configuration>
				<email>idugalic@gmail.com</email>
			</configuration>
		</server>
	</servers>

	<profiles>
		<profile>
			<id>idugalic-repo</id>
			<repositories>
				<repository>
					<id>idugalic-releases</id>
					<name>idugalic-releases</name>
					<url>http://maven.idugalic.pro/artifactory/local-repository</url>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
				</repository>
				<repository>
					<id>idugalic-snapshots</id>
					<name>idugalic-snapshots</name>
					<url>http://maven.idugalic.pro/artifactory/local-repository</url>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
				</repository>
			</repositories>
		</profile>
	</profiles>
	<activeProfiles>
		<activeProfile>idugalic-repo</activeProfile>
	</activeProfiles>
</settings>
